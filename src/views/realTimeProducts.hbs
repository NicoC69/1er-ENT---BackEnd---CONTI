<h1>Lista de Productos en Tiempo Real (con WebSockets)</h1>
<ul id="realTimeList">
    {{#each products}}
        <li>{{this.id}} - {{this.title}} - {{this.stock}} - {{this.price}}</li>
    {{/each}}
</ul>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.2/socket.io.js"></script>
<script>
    const socket = io();

    socket.on('productoCreado', (nuevoProducto) => {
        // LÃ³gica para actualizar la lista de productos en tiempo real
        const newItem = document.createElement('li');
        newItem.textContent = `${nuevoProducto.title} - ${nuevoProducto.price}`;
        document.getElementById('realTimeList').appendChild(newItem);
    });
</script>
